class Teacher:
    def __init__(self, name, age, subject):
        self.name = name
        self.age = age
        self.subject = subject

    def _format_info(self):
        """Bilgileri formatlar"""
        return f"Name: {self.name}, Age: {self.age}"

    def print_info(self):
        print(self._format_info())

    def print_details(self):
        print(self._format_info())
        print(f"Subject: {self.subject}")


