def calculateTotal(numbers):
    """Sayıların toplamını hesaplar"""
    total = 0
    for num in numbers:
        total = total + num
    return total


def calculate_average(numbers):
    """Sayıların ortalamasını hesaplar"""
    if not numbers:
        return 0
    return sum(numbers) / len(numbers)


def divide_numbers(a, b):
    """İki sayıyı böler"""
    return a / b


def safe_divide(a, b):
    """İki sayıyı güvenli şekilde böler"""
    try:
        return a / b
    except ZeroDivisionError:
        return None


def calculate_discount(price):
    """İndirim hesaplar"""
    if price > 100:
        return price * 0.2
    return 0


DISCOUNT_RATE = 0.2
DISCOUNT_THRESHOLD = 100

def calculate_discount_proper(price):
    """İndirim hesaplar (düzgün versiyon)"""
    if price > DISCOUNT_THRESHOLD:
        return price * DISCOUNT_RATE
    return 0


def multiply(x, y):
